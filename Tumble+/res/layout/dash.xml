<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/tumble_blue" android:id="@+id/dashLayout">

    <com.JIAT.Tumble.ObservableScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/dashListLayout">
        </LinearLayout>
    </com.JIAT.Tumble.ObservableScrollView>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:padding="10dip"
            android:layout_margin="10dip"
            android:id="@+id/refreshButton" android:layout_gravity="right|top"/>
</FrameLayout>